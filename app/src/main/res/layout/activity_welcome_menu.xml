<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".WelcomeMenu"
    android:background="#ff232322">

    <TextView
        android:id="@+id/sup_bro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome to"
        android:textColor="#fffaf901" />

    <TextView
        android:id="@+id/zeus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="            ZEUS"
        android:layout_marginTop="42dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#fffaf901"
        android:layout_below="@+id/sup_bro"
        android:layout_toEndOf="@+id/sup_bro"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zeus"
        android:text="Learning at the speed of light"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fffaf901" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Forgot Password?"
        android:id="@+id/forgotPw"
        android:textColor="#ff9dfa00"
        android:typeface="serif"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/button2"
        android:onClick="hello"
        android:typeface="monospace"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button"
        android:layout_below="@+id/button2"
        android:onClick="niqqa"
        android:layout_alignStart="@+id/forgotPw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />


</RelativeLayout>
